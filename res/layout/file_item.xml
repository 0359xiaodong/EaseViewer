<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/appInfo"
    android:layout_width="fill_parent"
    android:layout_height="45dp"
    android:padding="3dp" >

    <ImageView
        android:id="@+id/fileIcon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/file_icon_default" />

    <TextView
        android:id="@+id/fileName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/fileIcon"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@+id/fileIcon"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="fileName"
        android:textSize="7pt" />

    <TextView
        android:id="@+id/fileSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/fileIcon"
        android:layout_alignLeft="@id/fileName"
        android:layout_below="@+id/fileName"
        android:text="fileSize"
        android:textSize="4pt" />

    <CheckBox
        android:id="@+id/isSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:focusable="false" />

</RelativeLayout>